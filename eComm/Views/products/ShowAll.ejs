




<%-include("../header")%><br/>

<!-- Include Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }
    .table-container {
        max-width: 90%;
        margin: 0 auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }
    .btn-primary {
        margin-bottom: 20px;
    }
    table img {
        width: 100%;
        max-width: 300px;
        height: auto;
    }
    .action-links a {
        margin-right: 10px;
    }
</style>

<div class="table-container">
    <a href="/products/add" class="btn btn-primary">Create Product</a>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item) => { %>
                <tr>
                    <td><img src="<%= item.image %>" alt="<%= item.name %>"></td>
                    <td><%= item.pid %></td>
                    <td><%= item.name %></td>
                    <td><%= item.price %></td>
                    <td><%= item.desc %></td>
                    <td class="action-links">
                        <a href="/products/Show/<%= item._id %>" class="btn btn-info btn-sm">View</a>
                        <a href="/products/edit/<%= item._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/products/delete/<%= item._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%-include("../footer")%>
